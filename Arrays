#include <stdio.h>

void main()
{
    int arr[10];
    int i;
    printf("\n\n Read and print elements of an array: \n");
    printf("--------------------------------------------");
    
    
    printf("Input 10 elements in the array : \n");
    for(i=0;i<10;i++)
    {
        printf("Element-%d : ", i);
        scanf("%d",&arr[i]);
    }
    
    printf("\n Elements in array are : ");
    for(i=0; i<10;i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
}
